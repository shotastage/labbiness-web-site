extends templates/_layout.pug

block contents

    .row.hp_top_screen
        .col
            object(
                data-aos="fade-up"
                data-aos-duration="1500"
                class="top-icon"
                type="image/svg+xml" data="./assets/vectors/HeartLogo.svg"
            )


        .col
            .top-message-wrap(
                data-aos="fade-down-left"
                data-aos-duration="1500"
            )
                h1.top-message MAXIMAIZE
                    br
                    | YOUR
                    br
                    | PRODUCTIVITY

    .container-fluid
        .hp_section.hp_section_product(
            id="product"
            avoid_data-aos="flip-left"
            avoid_data-aos-duration="1500"
        )
            h1.hp_section_header Products
            .hp_card
                .card-content
                    h1.hp_card_title OpenPose
                    p.card-text 人口知能

                .card-link
                    a(href="http://webcreatorbox.com/about") LINK

            .hp_section_text_area
                h2 We are now making something atractive!



        .hp_section.hp_section_about_us(
            id="about_us"
            avoid_data-aos="flip-left"
            avoid_data-aos-duration="1500"
        )
            h1.hp_section_header About Us
            .hp_section_text_area
                h2 Our Services
                p Webアプリケーションを用いた業務効率化システムの開発 ・ライフハック型SNSの開発


        .hp_section.hp_section_contact(
            id="about_us"
            avoid_data-aos="flip-left"
            avoid_data-aos-duration="1500"
        )
            h1.hp_section_header Contact
            .hp_section_text_area
                h2 Mail
                p contact@hplab.jp


    div#canvas-container
        canvas#waveCanvas
    div.footer
        p.footer_copyright Copyright © 2017 HappinessLab.

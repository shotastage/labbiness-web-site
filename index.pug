extends templates/_layout.pug

block contents

    .row_NoMargin.hp_top_screen
        .col
            object(
                data-aos="fade-up"
                data-aos-duration="1500"
                class="top-icon"
                type="image/svg+xml" data="./HeartLogo.svg"
            )


        .col
            .top-message-wrap(
                data-aos="fade-down-left"
                data-aos-duration="1500"
            )
                h1.top-message MAXIMIZE
                    br
                    | YOUR
                    br
                    | PRODUCTIVITY

    .container-fluid
        .hp_section.hp_section_product(
            id="product"
        )
            h1.hp_section_header Products

            .hp_section_heading_msg
                h2 We are now making something atractive!

            .row
                .col
                    .hp_card.hp_card-gutter-right-half(
                        z_data-aos="zoom-in"
                        z_data-aos-duration="800"
                    )
                        .card-content
                            h1.hp_card_title 姿勢推定技術
                            p.hp_card_text_area 人工知能を用いて人体の姿勢を3D解析するアプリケーション。現在モバイル版を開発中。

                .col
                    .hp_card.hp_card-gutter-right-half.hp_card-gutter-left-half(
                        z_data-aos="zoom-in-up"
                        z_data-aos-duration="800"
                    )
                        .card-content
                            h1.hp_card_title PINNA
                            p.hp_card_text_area マップペースのSNS。ARによる道案内機能等も実装。2017年11月末リリース予定。

                .col
                    .hp_card.hp_card-gutter-left-half(
                        z_ata-aos="zoom-in-down"
                        z_data-aos-duration="800"
                    )
                        .card-content
                            h1.hp_card_title INSIGHT
                            p.hp_card_text_area チームの生産性を最大化するマネジメント系Webアプリケーション。現在試作品を開発中。


                //- Void Margin Area
                .hp_sectioin_void



        .hp_section.hp_section_about_us(
            id="about_us"
        )
            h1.hp_section_header About Us
            .hp_section_heading_msg
                h2 We are an organization to utilize research of information technology at the university to real society.

            .row
                .col
                    .hp_card.hp_card-gutter-right-half.hp_card_long_height(
                        data-aos="zoom-in"
                        data-aos-duration="800"
                    )
                        .card-content
                            h1.hp_card_title 松永 融
                            h2.hp_card_subtitle CEO & Co-Founder
                            p.hp_card_text_area_small.
                                慶應義塾大学総合政策学部在籍。
                                すべての人がよりクリエイティブに、かつ効率的に暮らしていける世界を目指して、学生団体Labbinessを共同設立（法人未登記）。主にサービスの企画、マーケティング、財務を担当。高校時代はストリートマジシャンとして活動していた。


                .col
                    .hp_card.hp_card_long_height.hp_card-gutter-right-half.hp_card-gutter-left-half(
                        data-aos="zoom-in-up"
                        data-aos-duration="800"
                    )
                        .card-content
                            h1.hp_card_title 島津 翔太
                            h2.hp_card_subtitle COO & Co-Founder
                            p.hp_card_text_area_small.
                                慶應義塾大学環境情報学部在籍。村井純研究会所属。
                                主にサービスの開発設計、全体のオペレーション管理、フロントエンドエンジニアリング、各種デザインを担当。幼少期より演奏しているエレクトーンに関連して、大学では機械学習による芸術音楽生成を研究している。代表とは中高6年間の同期。

                .col
                    .hp_card.hp_card_long_height.hp_card-gutter-left-half(
                        data-aos="zoom-in-down"
                        data-aos-duration="800"
                    )
                        .card-content
                            h1.hp_card_title 神保 和行
                            h2.hp_card_subtitle CTO & Co-Founder
                            p.hp_card_text_area_small.
                                慶應義塾大学環境情報学部在籍。村井純研究会所属。
                                主に技術的課題の解決、バックエンドエンジニアリング、R&Dを担当。ハードからソフトまで制作経験あり。大学では最先端の人工知能技術を研究している他、某デザインソフト開発会社で物理エンジンの開発責任者を担当している。絵師としての一面も。


        .hp_section.hp_section_contact(
            id="contact"
        )
            h1.hp_section_header Contact
            .row
                .col
                    .hp_section_text_area
                        iframe.hp_contact_form(
                            src="https://docs.google.com/forms/d/e/1FAIpQLSfOHpio4Ns7-LFd7VHKTHPlCIivZth07oGq7DO6Lr0TfQHVCg/viewform?embedded=true"
                            width="700"
                            height="500"
                            frameborder="0"
                            marginheight="0"
                            marginwidth="0"
                        ) 読み込んでいます...
                .col
                    h2 Mail
                    p contact@labbiness.com
            .row
                .col
                    h2 現住所
                    p 〒252-0816 神奈川県藤沢市遠藤4489 慶應藤沢イノベーションビレッジ


    div#canvas-container
        canvas#waveCanvas
    div.footer
        p.footer_copyright Copyright © 2017 Labbiness.
